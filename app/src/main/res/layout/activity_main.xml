    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:padding="10dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="#013EF4"
                android:padding="5dp"
                android:hint="Tên đăng nhập">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:id="@+id/edEmail1"
                    android:textSize="20dp"
                    android:textColor="#000107"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0227F8"
                android:padding="5dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/background_dark"
                android:hint="Nhập mật khẩu">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:inputType="textPassword"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhớ mật khẩu"
                android:id="@+id/chkRememberPass"
                android:textColor="#F60707"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

